{
    "compilerOptions": {
        "module": "commonjs",
        "noEmitOnError": true,
        "noFallthroughCasesInSwitch": true,
        "noImplicitAny": true,
        "noImplicitReturns": true,
        "noUnusedLocals": true,
        "noUnusedParameters": true,
        "outDir": "./built",
        "preserveConstEnums": true,
        "sourceMap": true,
        "baseUrl": "src",
        "paths": {
            "@public/*": ["public/*"]
        }
    },
    "include": ["src/**/*"]
}